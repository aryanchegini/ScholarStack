datasource db {
  provider = "sqlite"
  url      = "file:../app_data/dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  documents Document[]
  notes     Note[]
}

model Document {
  id        String   @id @default(uuid())
  title     String
  filename  String
  path      String
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Note {
  id        String   @id @default(uuid())
  content   String   // Storing raw rich text or markdown
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
