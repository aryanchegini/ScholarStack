generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../app_data/scholarstack.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  apiKey    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  Project[]
}

model Project {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  documents Document[]
  notebook  Notebook?
  highlights Highlight[]
  notebookPages NotebookPage[]
}

model Document {
  id           String           @id @default(uuid())
  projectId    String
  filename     String
  filePath     String
  pageCount    Int?
  content      String?          // Store extracted text for preview
  uploadedAt   DateTime         @default(now())
  project      Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  chunks       DocumentChunk[]
  highlights   Highlight[]
  notebook     Notebook?
}

model DocumentChunk {
  id         String   @id @default(uuid())
  documentId String
  chunkIndex Int
  content    String
  embedding  String? // JSON stringified vector array
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

model Notebook {
  id         String    @id @default(uuid())
  content    String    // TipTap JSON
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  projectId  String?   @unique
  documentId String?   @unique
  project    Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  document   Document? @relation(fields: [documentId], references: [id], onDelete: Cascade)
}

model NotebookPage {
  id        String   @id @default(uuid())
  title     String
  content   String   // TipTap JSON
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Highlight {
  id           String   @id @default(uuid())
  projectId    String
  documentId   String
  pageNumber   Int
  text         String
  annotation   String   @default("")
  color        String   @default("#fef08a")
  coordinates  String // JSON stringified bounding rect
  notebookId   String?
  createdAt    DateTime @default(now())
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  document     Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
}
