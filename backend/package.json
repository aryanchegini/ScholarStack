    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
